@page "/Vehiculos/Edit/{VehiculoId:int}"
@inject VehiculosService vehiculosService
@inject NavigationManager navigation
@rendermode InteractiveServer

<PageTitle> Editar Vehículo </PageTitle>

@if (vehiculo != null)
{
    <div class="container mt-3">
        <div class="card shadow-lg">
            <div class="card-header">
                <h5 class="card-title text-center">
                    <strong> Editar vehículo </strong>
                </h5>
            </div>

            <EditForm Model="vehiculo" OnValidSubmit="GuardarVehiculo">
                <DataAnnotationsValidator />

                <div class="card-body">
                    <div class="row">
                        <!-- Marca -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Marca</strong></label>
                            <InputText class="form-control" @bind-Value="vehiculo.Marca" />
                            <ValidationMessage For="() => vehiculo.Marca" />
                        </div>

                        <!-- Modelo -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Modelo</strong></label>
                            <InputText class="form-control" @bind-Value="vehiculo.Modelo" />
                            <ValidationMessage For="() => vehiculo.Modelo" />
                        </div>
                    </div>

                    <div class="row">
                        <!-- Placa -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Placa</strong></label>
                            <InputText class="form-control" @bind-Value="vehiculo.Placa" />
                            <ValidationMessage For="() => vehiculo.Placa" />
                        </div>

                        <!-- Año -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Año</strong></label>
                            <InputNumber class="form-control" @bind-Value="vehiculo.Anio" />
                            <ValidationMessage For="() => vehiculo.Anio" />
                        </div>
                    </div>

                    <div class="row">
                        <!-- Color -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Color</strong></label>
                            <InputText class="form-control" @bind-Value="vehiculo.Color" />
                            <ValidationMessage For="() => vehiculo.Color" />
                        </div>

                        <!-- Tipo -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Tipo de vehículo</strong></label>
                            <InputSelect class="form-select" @bind-Value="vehiculo.TipoVehiculo">
                                <option value="" disabled>Seleccione un tipo</option>
                                <option value="Camión">Camión</option>
                                <option value="Camioneta">Camioneta</option>
                                <option value="Automóvil">Automóvil</option>
                                <option value="Motocicleta">Motocicleta</option>
                            </InputSelect>
                            <ValidationMessage For="() => vehiculo.TipoVehiculo" />
                        </div>
                    </div>

                    <div class="row">
                        <!-- Chofer -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Chofer (ID - opcional)</strong></label>
                            <InputNumber class="form-control" @bind-Value="vehiculo.ChoferId" />
                            <small class="text-muted">Puede dejarlo vacío.</small>
                        </div>
                    </div>

                </div>

                <div class="card-footer gap-2 bg-white d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary bi bi-save"> Guardar </button>
                    <button type="button" class="btn btn-danger bi bi-trash"
                            @onclick="() => MostrarModal = true">
                        Eliminar
                    </button>
                    <a class="btn btn-secondary bi bi-arrow-left-circle" href="/Vehiculos/Index">
                        Cancelar
                    </a>
                </div>

            </EditForm>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3">Cargando información...</p>
    </div>
}

@if (MostrarModal)
{
    <div class="modal d-block" tabindex="-1" style="background:rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title mx-auto">
                        <strong> Eliminar vehículo </strong>
                    </h5>
                </div>

                <div class="modal-body">
                    <label class="col-12"><strong>Vehículo Id:</strong> @vehiculo!.VehiculoId</label>
                    <label class="col-12"><strong>Marca:</strong> @vehiculo.Marca</label>
                    <label class="col-12"><strong>Modelo:</strong> @vehiculo.Modelo</label>
                    <label class="col-12"><strong>Placa:</strong> @vehiculo.Placa</label>
                    <label class="col-12"><strong>Año:</strong> @vehiculo.Anio</label>
                    <label class="col-12"><strong>Tipo:</strong> @vehiculo.TipoVehiculo</label>
                    <label class="col-12"><strong>Chofer Id:</strong> @(vehiculo.ChoferId?.ToString() ?? "Sin asignar")</label>

                    <label class="col-12 text-danger mt-3">
                        ¿Está seguro que desea eliminar este vehículo?
                    </label>
                </div>

                <div class="modal-footer d-flex justify-content-center gap-2">
                    <button type="button" class="btn btn-danger bi bi-trash"
                            @onclick="EliminarVehiculo">
                        Sí, eliminar
                    </button>
                    <button type="button" class="btn btn-secondary bi bi-arrow-left-circle"
                            @onclick="() => MostrarModal = false">
                        Cancelar
                    </button>
                </div>

            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int VehiculoId { get; set; }

    public Vehiculo? vehiculo { get; set; }

    private bool MostrarModal = false;

    protected override async Task OnInitializedAsync()
    {
        vehiculo = await vehiculosService.Buscar(VehiculoId);
    }

    public async Task GuardarVehiculo()
    {
        if (vehiculo != null && await vehiculosService.Guardar(vehiculo))
        {
            navigation.NavigateTo("/Vehiculos/Index");
        }
    }

    public async Task EliminarVehiculo()
    {
        if (await vehiculosService.Eliminar(VehiculoId))
        {
            navigation.NavigateTo("/Vehiculos/Index");
        }
    }
}

